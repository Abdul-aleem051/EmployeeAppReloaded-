@{
    ViewData["Title"] = "Edit Employee Record";
}
@model UpdateEmployeeViewModel

<h1>@ViewData["Title"]</h1>
<hr>

<form asp-action="Edit" asp-controller="Employee" method="post">
    <input type="hidden" asp-for="Id" />

    <div>

        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>

    </div>

    <div>

        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>

    </div>

    <div>

        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>

    </div>

    <div>

        <label asp-for="HireDate"></label>
        <input asp-for="HireDate" />
        <span asp-validation-for="HireDate"></span>

    </div>

    <div>

        <label asp-for="Salary"></label>
        <input asp-for="Salary" />
        <span asp-validation-for="Salary"></span>

    </div>

    <div class="form-group">
        <label asp-for="DepartmentId" class="control-label"></label>
        <select asp-for="DepartmentId" class="form-control" asp-items="Model.Departments">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>


    <button type="submit">Update</button>
</form>
