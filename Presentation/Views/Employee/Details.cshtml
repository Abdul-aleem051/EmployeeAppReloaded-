@{
    ViewData["Title"] = "Employee Details";
}
@model Presentation.Models.EmployeeDetailViewModel

<h1>@Model.FirstName @Model.LastName</h1>

<dl class="row">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
</dl>

<dl class="row">
    <dt class="col-sm-2">HireDate</dt>
    <dd class="col-sm-10">@Model.HireDate</dd>
</dl>

<dl class="row">
    <dt class="col-sm-2">Salary</dt>
    <dd class="col-sm-10">@Model.Salary</dd>
</dl>

<dl class="row">
    <dt class="col-sm-2">DepartmentId</dt>
    <dd class="col-sm-10">@Model.DepartmentId</dd>
</dl>
